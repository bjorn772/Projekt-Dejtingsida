@model IEnumerable<Projekt_Dejtingsida.Models.FriendRequestList>
<!--Kontrollerar om det finns några skickade vänförfrågningar -->
@if (!(Model == null))
{
    <table class="table">
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Profile</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Firstname
                </td>
                <td>
                    @item.Lastname
                </td>
                <td>
                    @Html.ActionLink("» View Profile", "ShowProfile", "Profile",
                     new { showID = item.UserId },
                     new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("» Delete", "RemoveRequest", "Friend",
                    new { removeID = item.Id },
                    new { @class = "btn btn-danger"})
                </td>
            </tr>
        }
    </table>
}
else
{
    <!-- Visar ett meddelande om det inte finns några skickade förfrågningar -->
    <h3>You have no outgoing requests.</h3>
}