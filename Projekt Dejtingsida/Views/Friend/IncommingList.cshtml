@model IEnumerable<Projekt_Dejtingsida.Models.FriendRequestList>
<!-- Kontrollerar om det finns några inkommande förfrågningar -->
@if (!(Model == null))
{
    <table class="table">
        <tr>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Profile</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Firstname
                </td>
                <td>
                    @item.Lastname
                </td>
                <td>
                    @Html.ActionLink("» View Profile", "ShowProfile", "Profile",
                    new { showID = item.UserId },
                    new { @class = "btn btn-primary" })
                </td>
                <td>
                    @Html.ActionLink("Accept", "RequestRespone", "Friend",
                    new { requestID = item.Id, acceptRequest = true }, null)
                    /
                    @Html.ActionLink("Decline", "RequestRespone", "Friend",
                    new { requestID = item.Id, acceptRequest = false }, null)
                </td>
            </tr>
        }
    </table>
}
else
{
    <!-- Visar ett meddelande om det inte finns några inkommande förfrågningar-->
    <h3>You have no incomming requests.</h3>
}