@model IEnumerable<Projekt_Dejtingsida.Models.FriendListItem>

@{
    ViewBag.Title = "FriendList";
}

<h2>Friend list</h2>
<!-- Kontrollerar om det hämtats några kontakter.-->
@if (!(Model.Count() == 0))
{
    <table class="table">
        <tr>
            <th>
                Firstname
            </th>
            <th>
                Lastname
            </th>
            <th></th>
            <th></th>
        </tr>
        <!-- Visar kontakterna.-->
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Firstname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lastname)
                </td>
                <td>
                    @Html.ActionLink("Delete", "RemoveFriend", "Friend", new { friendID = item.UserId }, new { })
                </td>
                <td>
                    @Html.ActionLink("View profile", "ShowProfile", "Profile", new { showID = item.UserId }, new { })
                </td>
            </tr>
        }

    </table>
}
else
{
    <!-- Visas ett meddelande om man inte har några kontakter-->
    <h4>You have no friends in your friend list.</h4>
}
<!-- Länk för att söka efter kontakter -->
<p>
    @Html.ActionLink("Add friends", "Search", "Profile")
</p>